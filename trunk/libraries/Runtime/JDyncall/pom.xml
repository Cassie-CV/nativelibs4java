<project xmlns="http://maven.apache.org/POM/4.0.0"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
 <modelVersion>4.0.0</modelVersion>
  <groupId>com.nativelibs4java</groupId>
  <artifactId>nl4j-runtime</artifactId>
  <name>NativeLibs4Java C/C++ Interop Layer</name>
  <url>http://code.google.com/p/nativelibs4java/wiki/Runtime</url>
  <version>${nl4j-runtime.version}</version>
  <packaging>jar</packaging>

  <parent>
	  <groupId>com.nativelibs4java</groupId>
	  <artifactId>nl4j-runtime-parent</artifactId>
	  <version>0.1-SNAPSHOT</version>
	  <relativePath>../Parent</relativePath>
  </parent>

  <dependencies>

	<dependency>
      <groupId>com.ochafik</groupId>
      <artifactId>ochafik-util</artifactId>
      <version>${jnaerator.version}</version>
      <scope>compile</scope>
    </dependency>
	
  </dependencies>

  <build>
  	<plugins>

		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-shade-plugin</artifactId>
			<version>1.2.2</version>
			<executions>
			  <execution>
				<phase>package</phase>
				<goals>
				  <goal>shade</goal>
				</goals>
				<configuration>
					<shadedArtifactAttached>true</shadedArtifactAttached>
					<!--shadedArtifactId>${project.artifactId}-standalone</shadedArtifactId-->
					<!--finalName>${project.artifactId}-standalone-${project.version}</finalName-->
					<artifactSet>
						<excludes>
						  <exclude>org.scala-lang:scala-library</exclude>
						  <exclude>org.slf4j:slf4j-jdk14</exclude>
						  <exclude>junit:junit</exclude>
						</excludes>
					  </artifactSet>
				</configuration>
			  </execution>
			</executions>
		</plugin>
		
		
		<plugin>
			<groupId>com.nativelibs4java</groupId>
			<artifactId>maven-velocity-plugin</artifactId>
			<version>${nl4j-runtime.version}</version>
			<executions>
			  <execution>
				<phase>generate-sources</phase>
				<goals>
				  <goal>compile</goal>
				</goals>
			  </execution>
			</executions>
		</plugin>
		
		<plugin>
			<groupId>com.nativelibs4java</groupId>
			<artifactId>maven-nl4j-runtime-templates-plugin</artifactId>
			<version>${nl4j-runtime.version}</version>
			<executions>
			  <execution>
				<phase>generate-sources</phase>
				<goals>
				  <goal>compile</goal>
				</goals>
			  </execution>
			</executions>
			<configuration>
				<parameters>
					<useJNA>false</useJNA>
					<memoryClass>com.nativelibs4java.runtime.Memory</memoryClass>
					<pointerClass>com.nativelibs4java.runtime.Pointer</pointerClass>
					<!--pointerTypeClass>com.nativelibs4java.runtime.PointerType</pointerTypeClass-->
					<getDirectBufferPointer>com.nativelibs4java.runtime.Pointer.pointerTo</getDirectBufferPointer>
				</parameters>
				<templates>
					<template>com/nativelibs4java/runtime/ann/Alignment.java</template>
					<template>com/nativelibs4java/runtime/ann/Bits.java</template>
					<template>com/nativelibs4java/runtime/ann/ByValue.java</template>
					<template>com/nativelibs4java/runtime/ann/Field.java</template>
					<template>com/nativelibs4java/runtime/ann/Length.java</template>
					<template>com/nativelibs4java/runtime/ann/PointerSized.java</template>
					<template>com/nativelibs4java/runtime/ann/Virtual.java</template>
					<template>com/nativelibs4java/runtime/ann/Wide.java</template>
					
					<template>com/nativelibs4java/runtime/Array.java</template>
					<template>com/nativelibs4java/runtime/BitFields.java</template>
					<template>com/nativelibs4java/runtime/Struct.java</template>
					<template>com/nativelibs4java/runtime/StructWithNIO.java</template>
					<template>com/nativelibs4java/runtime/StructIO.java</template>
					<template>com/nativelibs4java/runtime/StructIOWithNIO.java</template>
				</templates>
				<testTemplates>
					<testTemplate>com/nativelibs4java/runtime/MyStruct.java</testTemplate>
				</testTemplates>
			</configuration>
		</plugin>
		
	</plugins>
  </build>
</project>



