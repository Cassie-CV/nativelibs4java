			<executions>
			
				<execution>
					<phase>generate-sources</phase>
					<goals>
					<goal>velogen</goal>
					</goals>
					<configuration>
						<templates>
								<template>
									<path>com/nativelibs4java/opencl/CLxxxBuffer.vm</path>
