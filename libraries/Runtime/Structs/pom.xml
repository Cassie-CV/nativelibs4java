<project xmlns="http://maven.apache.org/POM/4.0.0"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
 <modelVersion>4.0.0</modelVersion>
  <groupId>com.nativelibs4java</groupId>
  <artifactId>nl4j-runtime-structs-jna</artifactId>
  <name>NativeLibs4Java Structs for JNA</name>
  <url>http://code.google.com/p/nativelibs4java/wiki/Runtime</url>
  <version>${nl4j-runtime.version}</version>
  <packaging>jar</packaging>

  <parent>
	  <groupId>com.nativelibs4java</groupId>
	  <artifactId>nl4j-runtime-parent</artifactId>
	  <version>1.0-SNAPSHOT</version>
	  <relativePath>../Parent</relativePath>
  </parent>

  <dependencies>
  	
	<dependency>
	  <groupId>com.jnaerator</groupId>
	  <artifactId>jna-jnaerator</artifactId>
	  <version>${jna.version}</version>
	  <scope>compile</scope>
	</dependency>
	
  </dependencies>

  <build>
    <plugins>
	
		<!--plugin>
			<groupId>com.nativelibs4java</groupId>
			<artifactId>maven-velocity-plugin</artifactId>
			<version>${nl4j-runtime.version}</version>
			<executions>
			  <execution>
				<phase>generate-sources</phase>
				<goals>
				  <goal>compile</goal>
				</goals>
			  </execution>
			</executions>
		</plugin-->
		
		<plugin>
			<groupId>com.nativelibs4java</groupId>
			<artifactId>maven-nl4j-runtime-templates-plugin</artifactId>
			<version>${nl4j-runtime.version}</version>
			<executions>
			  <execution>
				<phase>generate-sources</phase>
				<goals>
				  <goal>compile</goal>
				</goals>
			  </execution>
			</executions>
			<configuration>
				<parameters>
					<useJNA>true</useJNA>
					<memoryClass>com.sun.jna.Memory</memoryClass>
					<pointerClass>com.sun.jna.Pointer</pointerClass>
					<pointerTypeClass>com.sun.jna.PointerType</pointerTypeClass>
					<getDirectBufferPointer>com.sun.jna.Native.getDirectBufferPointer</getDirectBufferPointer>
				</parameters>
				<templates>
					<template>com/nativelibs4java/runtime/ann/Alignment.java</template>
					<template>com/nativelibs4java/runtime/ann/Bits.java</template>
					<template>com/nativelibs4java/runtime/ann/ByValue.java</template>
					<template>com/nativelibs4java/runtime/ann/Field.java</template>
					<template>com/nativelibs4java/runtime/ann/Length.java</template>
					<template>com/nativelibs4java/runtime/ann/NativeSize.java</template>
					<template>com/nativelibs4java/runtime/ann/Virtual.java</template>
					
					<template>com/nativelibs4java/runtime/structs/Array.java</template>
					<template>com/nativelibs4java/runtime/structs/BitFields.java</template>
					<template>com/nativelibs4java/runtime/structs/Struct.java</template>
					<template>com/nativelibs4java/runtime/structs/StructWithNIO.java</template>
					<template>com/nativelibs4java/runtime/structs/StructIO.java</template>
					<template>com/nativelibs4java/runtime/structs/StructIOWithNIO.java</template>
				</templates>
				<testTemplates>
					<testTemplate>com/nativelibs4java/runtime/structs/MyStruct.java</testTemplate>
				</testTemplates>
			</configuration>
		</plugin>
	
	</plugins>
  </build>
</project>



