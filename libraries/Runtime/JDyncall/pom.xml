<project xmlns="http://maven.apache.org/POM/4.0.0"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
 <modelVersion>4.0.0</modelVersion>
  <groupId>com.nativelibs4java</groupId>
  <artifactId>nl4j-runtime-interop</artifactId>
  <name>NativeLibs4Java C/C++ Interop Layer</name>
  <url>http://code.google.com/p/nativelibs4java/wiki/Runtime</url>
  <version>${nl4j-runtime.version}</version>
  <packaging>jar</packaging>

  <parent>
	  <groupId>com.nativelibs4java</groupId>
	  <artifactId>nl4j-runtime-parent</artifactId>
	  <version>1.0-SNAPSHOT</version>
	  <relativePath>../Parent</relativePath>
  </parent>

  <dependencies>

	<dependency>
      <groupId>com.ochafik</groupId>
      <artifactId>ochafik-util</artifactId>
      <version>${jnaerator.version}</version>
      <scope>compile</scope>
    </dependency>
	
  </dependencies>

  <build>
  	<plugins>

		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-shade-plugin</artifactId>
			<version>1.2.2</version>
			<executions>
			  <execution>
				<phase>package</phase>
				<goals>
				  <goal>shade</goal>
				</goals>
				<configuration>
					<shadedArtifactAttached>true</shadedArtifactAttached>
					<!--shadedArtifactId>${project.artifactId}-standalone</shadedArtifactId-->
					<!--finalName>${project.artifactId}-standalone-${project.version}</finalName-->
					<artifactSet>
						<excludes>
						  <exclude>org.scala-lang:scala-library</exclude>
						  <exclude>org.slf4j:slf4j-jdk14</exclude>
						  <exclude>junit:junit</exclude>
						</excludes>
					  </artifactSet>
				</configuration>
			  </execution>
			</executions>
		</plugin>
		
		
		<plugin>
			<groupId>com.nativelibs4java</groupId>
			<artifactId>maven-nl4j-runtime-templates-plugin</artifactId>
			<version>${nl4j-runtime.version}</version>
			<executions>
			  <execution>
				<phase>generate-sources</phase>
				<goals>
				  <goal>compile</goal>
				</goals>
			  </execution>
			</executions>
			<configuration>
				<parameters>
					<useJNA>false</useJNA>
					<memoryClass>com.nativelibs4java.runtime.Memory</memoryClass>
					<pointerClass>com.nativelibs4java.runtime.Pointer</pointerClass>
					<!--pointerTypeClass>com.nativelibs4java.runtime.PointerType</pointerTypeClass-->
					<getDirectBufferPointer>com.nativelibs4java.runtime.Pointer.getDirectBufferPointer</getDirectBufferPointer>
				</parameters>
				<resources>
					<resource>com/nativelibs4java/runtime/ann/Alignment.java</resource>
					<resource>com/nativelibs4java/runtime/ann/Bits.java</resource>
					<resource>com/nativelibs4java/runtime/ann/ByValue.java</resource>
					<resource>com/nativelibs4java/runtime/ann/Field.java</resource>
					<resource>com/nativelibs4java/runtime/ann/Length.java</resource>
					<resource>com/nativelibs4java/runtime/ann/NativeSize.java</resource>
					<resource>com/nativelibs4java/runtime/ann/Virtual.java</resource>
					
					<resource>com/nativelibs4java/runtime/structs/Addressable.java</resource>
					<resource>com/nativelibs4java/runtime/structs/Array.java</resource>
					<resource>com/nativelibs4java/runtime/structs/BitFields.java</resource>
					<resource>com/nativelibs4java/runtime/structs/Struct.java</resource>
					<resource>com/nativelibs4java/runtime/structs/StructWithNIO.java</resource>
					<resource>com/nativelibs4java/runtime/structs/StructIO.java</resource>
					<resource>com/nativelibs4java/runtime/structs/StructIOWithNIO.java</resource>
				</resources>
			</configuration>
		</plugin>
		
	</plugins>
  </build>
</project>



